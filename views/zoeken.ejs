<div id="zoeken-menu">
    <span id="verwijderen"><a href="/verwijderen"><i class="fas fa-trash"></i></a></span>
    <span id="instellingen"><a href="/wijzigen"><i class="fas fa-cog"></i></a></span>
    <span id="filter"><i class="fas fa-filter"></i> Filter</span>
</div>

<%gebruikersLijst.forEach(gebruiker => {%>
<div id="card" data-aos="fade-up">

    <section>
        <img src="/uploads/<%= gebruiker.img %>" alt="Geen gekozen profielfoto" class="avatarimg"/>
    </section>
    
    <section>
        <span><h2><%= gebruiker.naam %></h2> <p>(<%= gebruiker.leeftijd %>)</p></span>
    </section>

    <section>
        <h3>Mijn console</h3>
        <img src="img/console/<%= gebruiker.console %>.svg" alt="Logo van de console" class="consoleimg"/>
    </section>

    <section>
        <div><span><i class="fab fa-whatsapp-square"></i></span> 0<%= gebruiker.telefoon %></div>
    </section>

    <section>
        <h3>Games wat ik speel</h3>
        <span>
            <img src="img/game/<%= gebruiker.game1 %>.svg" alt="Logo van de game" class="gameimg"/>
            <img src="img/game/<%= gebruiker.game2 %>.svg" alt="Logo van de game" class="gameimg"/>
            <img src="img/game/<%= gebruiker.game3 %>.svg" alt="Logo van de game" class="gameimg"/>
            <img src="img/game/<%= gebruiker.game4 %>.svg" alt="Logo van de game" class="gameimg"/>
        </span>
    </section>

</div>
<%})%>

<div id="filteren">
    <span id="filterensluiten"><i class="fas fa-times-circle"></i></span>

    <div>
        <h1>Filteren</h1>
        <form method="POST" action="/zoeken" id="gameform">
            <label for="consolefilter">Console</label>
                <select name="consolefilter" id="consolefilter">
                    <option value="Alle">Alle</option>
                    <option value="PC">PC</option>
                    <option value="PlayStation 4">PlayStation 4</option>
                    <option value="PlayStation 5">PlayStation 5</option>
                    <option value="Xbox One">Xbox One</option>
                    <option value="Xbox Series X">Xbox Series X</option>
                </select>
            <input type="submit" value="Filteren">
        </form>
    </div>
    
</div>